<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dimen_10dp"
        android:layout_marginRight="@dimen/dimen_10dp"
        android:layout_marginTop="@dimen/dimen_8dp">
    <ImageView
            android:layout_width="@dimen/dimen_150dp"
            android:layout_height="@dimen/dimen_200dp"
            android:id="@+id/iv_poster"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

    <TextView
            android:layout_width="@dimen/dimen_0dp"
            android:layout_height="wrap_content"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginEnd="@dimen/dimen_10dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toRightOf="@id/iv_poster"
            android:text="@string/example_movie_title"
            android:layout_marginStart="@dimen/dimen_8dp"
            style="@style/MovieTitleStyle"
            android:id="@+id/tv_movie_title"/>

    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_date_range_24dp"
            app:layout_constraintLeft_toRightOf="@id/iv_poster"
            app:layout_constraintTop_toBottomOf="@id/tv_movie_title"
            android:layout_marginStart="@dimen/dimen_8dp"
            android:layout_marginTop="@dimen/dimen_3dp"
            android:id="@+id/iv_release_date_icon"
            android:tint="@color/lightColor"/>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toRightOf="@id/iv_release_date_icon"
            app:layout_constraintTop_toTopOf="@id/iv_release_date_icon"
            app:layout_constraintBottom_toBottomOf="@id/iv_release_date_icon"
            android:layout_marginStart="@dimen/dimen_3dp"
            android:text="@string/release_date_example"
            android:textSize="@dimen/font_14sp"
            android:textColor="@color/lightColor"
            android:fontFamily="@font/roboto_regular"
            android:id="@+id/tv_release_date"/>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@id/iv_release_date_icon"
            app:layout_constraintBottom_toBottomOf="@id/iv_release_date_icon"
            android:text="@string/rating_example"
            android:layout_marginEnd="@dimen/dimen_10dp"
            android:id="@+id/tv_rating"/>

    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="@id/iv_release_date_icon"
            app:layout_constraintBottom_toBottomOf="@id/iv_release_date_icon"
            app:layout_constraintRight_toLeftOf="@id/tv_rating"
            android:src="@drawable/ic_star_24dp"
            android:layout_marginEnd="@dimen/dimen_3dp"
            android:tint="@color/Gold"/>

    <TextView
            android:layout_width="@dimen/dimen_0dp"
            android:layout_height="@dimen/dimen_0dp"
            app:layout_constraintLeft_toRightOf="@id/iv_poster"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/iv_release_date_icon"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginStart="@dimen/dimen_8dp"
            android:layout_marginEnd="@dimen/dimen_10dp"
            android:layout_marginTop="@dimen/dimen_5dp"
            android:layout_marginBottom="@dimen/dimen_5dp"
            android:text="@string/lipsumExample"
            android:textColor="@color/description_color"
            android:textSize="@dimen/font_15sp"
            android:ellipsize="end"
            android:maxLines="7"
            android:fontFamily="@font/roboto_light"
            android:id="@+id/tv_description"
    />

</androidx.constraintlayout.widget.ConstraintLayout>